@using System.Collections
@model IEnumerable<Ordonnance>
@{
    ViewBag.title = "Dashboard";
}
<style>
    img {
        width: 200px;
        height: 200px;
    }
</style>
<h2>Tableau de bord</h2>
<div class="container-fluid">
    <div class="row">
        <div class="col text-center">

            <a asp-action="Index" asp-controller="Patient"><img class="img-thumbnail" src="~/images/patient_icon.png"
                    alt="patient_icon"></a>
            <p>Patient</p>
        </div>
        <div class="col text-center">
            <a asp-action="Index" asp-controller="Allergie"><img class="img-thumbnail" src="~/images/forbidden_icon.png"
                    alt="forbidden_icon Allergies"></a>
            <p>Allergie</p>
        </div>
        <div class="col text-center">
            <a asp-action="Index" asp-controller="Antecedent"><img class="img-thumbnail"
                    src="~/images/forbidden_icon.png" alt="forbidden_icon Antécédents"></a>
            <p>Antécédent</p>
        </div>
        <div class="col text-center">
            <a asp-action="Index" asp-controller="Medicament"><img class="img-thumbnail" src="~/images/med_icon2.png"
                    alt="medicament_icon"></a>
            <p>Médicament</p>
        </div>
        <div class="col text-center">
            <a asp-action="Index" asp-controller="Ordonnance"><img class="img-thumbnail"
                    src="~/images/ordonnance_icon.png" alt="ordonnance_icon"></a>
            <p>Ordonnance</p>
        </div>
    </div>
</div>

    <h1 class="text-center mb-6">Liste des Ordonnances en cours</h1>
@if (Model.Count() > 0)
{
    <div class="container text-center mt-4 mb-4">
        <div class="row">
            <div class="col-1"></div>
            <table class="table table-dark table-hover">
                <thead>
                    <tr>
                        <th>Posologie</th>
                        <th>Date début</th>
                        <th>Date fin</th>
                        <th>Instructions spécifiques</th>
                        <th>Médecin</th>
                        <th>Patient</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var ordonnance in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(o => ordonnance.Posologie)</td>
                            <td>@Html.DisplayFor(o => ordonnance.Date_debut)</td>
                            <td>@Html.DisplayFor(o => ordonnance.Date_fin)</td>
                            <td>@Html.DisplayFor(o => ordonnance.Instructions_specifique)</td>
                            <td>@Html.DisplayFor(o => ordonnance.Medecin.UserName)</td>
                            <td>@Html.DisplayFor(o => ordonnance.Patient.Nom_p)</td>
                        </tr>
                    }
        </tbody>
        </table>
        <div class="col-1"></div>
        
    </div>
    </div>

}
else
{
    <p>Il n'y a pas d'ordonnance en cours</p>
}