                            <ul class="dropdown-menu">
                                <li><a asp-action="Logout" asp-controller="Account">
                                        <button class="btn btn-danger btn-sm">Se déconnecter</button>
                                    </a></li>
                                <li><a asp-action="Edit" asp-controller="Account">
                                        <button class="btn btn-secondary btn-sm">Modifier le profile</button>
                                    </a></li>
                            </ul>

                        </div>
                    }
                    else
                    {
                        <p><span class="navbar-text">Vous êtes déconnecté.</span></p>
                        <a asp-action="Login" asp-controller="Account">
                            <button class="btn btn-info btn-sm">S'identifier</button>
                        </a>
                    }
                </div>
            </div>
        </nav>
