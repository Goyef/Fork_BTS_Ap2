@{
    Layout = null;

}
@model OrdonnanceEditViewModel
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Layout</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
   <style>
    img {
  width: 200px;
  height: 200px;
}}
   </style>
</head>

<body>
    <header>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>
        <nav class="navbar navbar-expand-lg bg-info ">
           
             GSB Med Manager
            </div>
        </nav>
    </header>
    <div class="space"></div>
    <body>
         <div class="position-absolute top-0 end-0 translate-middle"><img class="img-thumbnail " src="~/images/logo-gsb.png" alt="GSB_icon"></div>
         <br/>
        <h2>Ordonnance</h2>
        <br/>
         <div class="container-fluid">
<div class="form-group">
    <label asp-for="Posologie" class="control-label"></label>
    <div class="text-body-secondary" >@Html.DisplayFor(model => model.Posologie)</div>
</div>
<br/>
<div class="form-group">
    <label asp-for="Date_debut" class="control-label"></label>
    <div class="text-body-secondary">@Html.DisplayFor(model => model.Date_debut)</div>
    <span asp-validation-for="Date_debut" class="text-danger"></span>
</div>
<br/>
<div class="form-group">
    <label asp-for="Date_fin" class="control-label"></label>
     <div class="text-body-secondary">@Html.DisplayFor(model => model.Date_fin)</div>
</div>
<br/>
<div class="form-group">
    <label asp-for="Instructions_specifique" class="control-label"></label>
     <div class="text-body-secondary" >@Html.DisplayFor(model => model.Instructions_specifique)</div>
</div>
<br/>
<div class="form-group">
    <label asp-for="Patient" class="control-label"></label>
   <div class="text-body-secondary">@Html.DisplayFor(model => model.Patient.Prenom_p)</div>
</div>
<br/>
<div class="form-group">
    <label asp-for="Medecin" class="control-label"></label>
   <div class="text-body-secondary">@Html.DisplayFor(model => model.Medecin.UserName)</div>
</div>
<br/>
<h4>Medicaments</h4>
    <div class="form-group">
        <ul>
            @foreach (var Medicament in Model.Medicaments)
            {
                <li>@Medicament.Libelle_med</li>
            }
        </ul>
    </div>
        </div>
    </body>
    <footer>
         <div class="text-center footer">
            <p>&copy; 2024 Galaxy Swiss Bourdin (GSB). Tous droits réservés.</p>
            <p><a href="">Mentions légales</a> </p>
            <p>Version 1.0</p>
        </div>
    </footer>
</body>

</html>

