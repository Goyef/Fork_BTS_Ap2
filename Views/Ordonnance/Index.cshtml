@using System.Collections

@model IEnumerable<Ordonnance>
    <h1 class="text-center mb-6">Liste des Ordonnances</h1>
@if (Model.Count() > 0)
{
    <div class="container text-center mt-4 mb-4">
        <div class="row">
            <div class="col-1"></div>
            <table class="table table-dark table-hover">
                <thead>
                    <tr>
                        <th>Posologie</th>
                        <th>Date début</th>
                        <th>Date fin</th>
                        <th>Instructions spécifiques</th>
                        <th>Médecin</th>
                        <th>Patient</th>
                         <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var ordonnance in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(o => ordonnance.Posologie)</td>
                            <td>@Html.DisplayFor(o => ordonnance.Date_debut)</td>
                            <td>@Html.DisplayFor(o => ordonnance.Date_fin)</td>
                            <td>@Html.DisplayFor(o => ordonnance.Instructions_specifique)</td>
                            <td>@Html.DisplayFor(o => ordonnance.Medecin.UserName)</td>
                            <td>@Html.DisplayFor(o => ordonnance.Patient.Nom_p)</td>
                            <td><a asp-action="Edit" asp-route-id="@ordonnance.OrdonnanceId" id="accueil">Modifier</a></td>
                            <td><a asp-action="ShowDetails" asp-route-id="@ordonnance.OrdonnanceId" id="accueil">Détails</a></td>
                            <td><a asp-action="Export" asp-route-id="@ordonnance.OrdonnanceId" id="accueil">Exporter en PDF</a></td>
                             <td><a asp-action="Delete" asp-route-id="@ordonnance.OrdonnanceId" id="accueil">Supprimer</a></td>
                        </tr>

                        @* <div class=" container">
                                    <h1>Test Exception</h1>
                                    <form asp-action="ThrowException" method="post">
                                        <button type="submit" class="btn btn-danger">Lancer une exception</button>
                                    </form>
                        </div> *@
                    }
        </tbody>
        </table>
        <div class="col-1"></div>
        
    </div>
   <a asp-action="Add" id="accueil" class="btn btn-primary">Ajouter une nouvelle ordonnance</a>
    </div>

}
else
{
    <p>Il n'y a pas d'ordonnance</p>
    <a asp-action="Add" id="accueil" class="btn btn-primary">Ajouter une nouvelle ordonnance</a>
}