@model IEnumerable<Ordonnance>
 <h1 class="text-center mb-6">Liste des Prescriptions par période</h1>
 @if (Model.Count() > 0)
 {
 <div class="container text-center mt-4 mb-4">
    <div class="row">
         <div class="col-1"></div>
        <table class="table table-dark table-hover">
            <thead>
                <tr>
                    <th>Patient</th>
                    <th>Médecin</th>
                    <th>Posologie</th>
                    <th>Date de début</th>
                    <th>Date de fin</th>
                    <th>Médicaments</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var ordonnance in Model)
                {
                    <tr>
                        <td>@ordonnance.Patient.Nom_p</td>
                        <td>@ordonnance.Medecin.UserName</td>
                        <td>@ordonnance.Posologie</td>
                        <td>@ordonnance.Date_debut</td>
                        <td>@ordonnance.Date_fin</td>
                        <td>
                            @foreach (var medicament in ordonnance.Medicaments)
                            {
                                <span>* @medicament.Libelle_med</span><br />
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
 </div>
 }
 else
{
    <p>Il n'y a pas d'ordonnance Supprimer cette période</p>
}
  <a asp-action="Index" id="accueil" class="btn btn-primary">Retour accueil au menu rapport</a>