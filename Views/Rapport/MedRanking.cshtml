@{
    ViewBag.title = "MedRanking";
}

@model IEnumerable<Medicament>
<style>
    .text-center,
    mb-6 {
        padding-bottom: 2em;
    }
</style>
<h1 class="text-center mb-6">Statistique des médicaments</h1>

@if (Model.Count() > 0)
{
    <div class="container text-center mt-4 mb-4">
        <div class="row">
            <div class="col-1"></div>
            <table class="table table-dark table-hover">
                <thead>
                    <tr>
                        <th>Libelle du médicament</th>
                        <th>Nombre de fois utilisés</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var Medicament in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(m => Medicament.Libelle_med)</td>
                            <td>@Html.DisplayFor(m => Medicament.compteur)</td>
                        </tr>
                    }
        </tbody>
        </table>
        <div class="col-1"></div>
        
    </div>
    </div>

}
else
{
    <p>Il n'y a pas de médicaments</p>
   
}